<!DOCTYPE html>
<html>
  <head>
    <title>Ruddit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <%= link_to 'rUddit', root_path, class: "navbar-brand" %>
        <% if user_signed_in? %>
          <nav class="navbar navbar-nav ml-auto">
            <ul class='navbar-nav'>
              <li class='nav-item'>
                <div class="container">
                  <%= link_to 'Sign out', destroy_user_session_path, class: 'nav-item', method: :delete %>
                </div>
              </li>
            </ul>
          </nav>
        <% else %>
          <nav class="navbar navbar-nav ml-auto">
            <ul class='navbar-nav'>
              <li class='nav-itiem'>
                <div class="container">
                  <%= link_to 'Login', new_user_session_path  %>
                </div>
              </li>
              <li class='nav-item'>
                <div class="container">
                  <%= link_to 'Sign up', new_user_registration_path  %>
                </div>
              </li>
            </ul>
          </nav>

            <% end %>

      </nav>
    </header>

    <div id="main_content" class="container">
      <div id="container" class="col-md-9 center-block">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
